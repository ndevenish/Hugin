	  src/include/vigra/initimage.hxx,
	  src/include/vigra/inspectimage.hxx,
	  src/include/vigra/iteratortraits.hxx,
	  src/include/vigra/labelimage.hxx,
	  src/include/vigra/localminmax.hxx, src/include/vigra/lug.hxx,
	  src/include/vigra/nonlineardiffusion.hxx,
	  src/include/vigra/numerictraits.hxx,
	  src/include/vigra/recursiveconvolution.hxx,
	  src/include/vigra/resizeimage.hxx,
	  src/include/vigra/rgbvalue.hxx,
	  src/include/vigra/seededregiongrowing.hxx,
	  src/include/vigra/separableconvolution.hxx,
	  src/include/vigra/stdconvolution.hxx,
	  src/include/vigra/stdimage.hxx,
	  src/include/vigra/stdimagefunctions.hxx,
	  src/include/vigra/symmetry.hxx, src/include/vigra/tiff.h,
	  src/include/vigra/tiff.hxx, src/include/vigra/tinyvector.hxx,
	  src/include/vigra/transformimage.hxx,
	  src/include/vigra/utilities.hxx, src/include/vigra/viff.h,
	  src/include/vigra/viff.hxx: added vigra headers.
	  no external libs are needed for the functionality used by hugin.
	  it is taken from vigra 1.1.6.
	  
	  correlation.hxx is new and contains a simple correlation, needs
	  to be extended to work on image pyramids. It probably also
	  contains a
	  bug somewhere, a perfect template doesn't get a correlation
	  coefficent
	  of 1.

