	  src/Panorama/Panorama.cpp, src/Panorama/PanoramaMemento.cpp,
	  src/Panorama/SpaceTransform.cpp, src/common/utils.cpp,
	  src/hugin/CPZoomDisplayPanel.cpp,
	  src/hugin/ImageOrientationPanel.cpp, src/hugin/ImagesList.cpp,
	  src/hugin/LensPanel.cpp, src/hugin/MainFrame.cpp,
